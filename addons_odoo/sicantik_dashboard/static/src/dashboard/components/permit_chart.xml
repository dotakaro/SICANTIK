<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="sicantik_dashboard.PermitChart">
        <div class="permit_chart_container">
            <div class="chart_header">
                <h3 t-esc="props.title"/>
                <div class="chart_type_selector">
                    <button 
                        class="btn btn-sm" 
                        t-att-class="{'btn-primary': state.chartType === 'bar', 'btn-secondary': state.chartType !== 'bar'}"
                        t-on-click="() => this.onChartTypeChange('bar')"
                        title="Bar Chart">
                        <i class="fa fa-bar-chart"/>
                    </button>
                    <button 
                        class="btn btn-sm" 
                        t-att-class="{'btn-primary': state.chartType === 'pie', 'btn-secondary': state.chartType !== 'pie'}"
                        t-on-click="() => this.onChartTypeChange('pie')"
                        title="Pie Chart">
                        <i class="fa fa-pie-chart"/>
                    </button>
                    <button 
                        class="btn btn-sm" 
                        t-att-class="{'btn-primary': state.chartType === 'line', 'btn-secondary': state.chartType !== 'line'}"
                        t-on-click="() => this.onChartTypeChange('line')"
                        title="Line Chart">
                        <i class="fa fa-line-chart"/>
                    </button>
                </div>
            </div>
            <div class="chart_canvas_wrapper">
                <canvas t-ref="canvas"/>
            </div>
        </div>
    </t>
</templates>

