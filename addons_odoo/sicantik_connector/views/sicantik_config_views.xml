<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Action: Sync Permit Types (MUST BE FIRST!) -->
    <record id="action_sync_permit_types" model="ir.actions.server">
        <field name="name">Sinkronkan Jenis Izin</field>
        <field name="model_id" ref="model_sicantik_connector"/>
        <field name="binding_model_id" ref="model_sicantik_config"/>
        <field name="state">code</field>
        <field name="code">
# Get active connector
connector = env['sicantik.connector'].search([('active', '=', True)], limit=1)
if connector:
    result = connector.sync_permit_types()
    action = {
        'type': 'ir.actions.client',
        'tag': 'display_notification',
        'params': {
            'title': 'Sinkronisasi Jenis Izin Selesai',
            'message': f'Baru: {result["synced"]}, Diperbarui: {result["updated"]}, Gagal: {result["failed"]}',
            'type': 'success' if result['synced'] > 0 or result['updated'] > 0 else 'warning',
            'sticky': False,
        }
    }
else:
    action = {
        'type': 'ir.actions.client',
        'tag': 'display_notification',
        'params': {
            'title': 'Error',
            'message': 'Tidak ada connector aktif',
            'type': 'danger',
            'sticky': False,
        }
    }
        </field>
    </record>

    <!-- SICANTIK Configuration Form View -->
    <record id="view_sicantik_config_form" model="ir.ui.view">
        <field name="name">sicantik.config.form</field>
        <field name="model">sicantik.config</field>
        <field name="arch" type="xml">
            <form string="SICANTIK Configuration">
                <header>
                    <button name="action_test_connection" type="object" string="Tes Koneksi" class="oe_highlight"/>
                    <button name="action_sync_now" type="object" string="Sinkronkan Data Izin" class="btn-primary"/>
                    <button name="%(action_sync_permit_types)d" type="action" string="Sinkronkan Jenis Izin" class="btn-info"/>
                    <button name="action_open_dashboard" type="object" string="Buka Dashboard" class="btn-secondary"/>
                    <field name="connection_status" widget="badge" 
                           decoration-success="connection_status == 'connected'"
                           decoration-danger="connection_status == 'error'"
                           decoration-muted="connection_status == 'unknown'"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_dashboard" type="object" class="oe_stat_button" icon="fa-list">
                            <field name="total_permits_synced" widget="statinfo" string="Permits Synced"/>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="e.g., SICANTIK Production"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="API Settings">
                            <field name="api_url" placeholder="https://perizinan.karokab.go.id/backoffice/api"/>
                            <field name="api_timeout"/>
                            <field name="active"/>
                        </group>
                        <group string="Sync Settings">
                            <field name="sync_interval"/>
                            <field name="sync_limit"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Rate Limiting">
                            <field name="rate_limit_enabled"/>
                            <field name="rate_limit_requests" invisible="rate_limit_enabled == False"/>
                        </group>
                        <group string="Statistics">
                            <field name="last_sync_date"/>
                            <field name="last_sync_duration" widget="float_time"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Connection Status" name="status">
                            <group>
                                <field name="last_error" invisible="last_error == False" 
                                       widget="text" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- SICANTIK Configuration List View -->
    <record id="view_sicantik_config_tree" model="ir.ui.view">
        <field name="name">sicantik.config.tree</field>
        <field name="model">sicantik.config</field>
        <field name="arch" type="xml">
            <list string="SICANTIK Configurations">
                <field name="name"/>
                <field name="api_url"/>
                <field name="connection_status" widget="badge" 
                       decoration-success="connection_status == 'connected'"
                       decoration-danger="connection_status == 'error'"/>
                <field name="total_permits_synced"/>
                <field name="last_sync_date"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- SICANTIK Configuration Action -->
    <record id="action_sicantik_config" model="ir.actions.act_window">
        <field name="name">SICANTIK Configuration</field>
        <field name="res_model">sicantik.config</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first SICANTIK configuration
            </p>
            <p>
                Configure connection to SICANTIK API server for data synchronization.
            </p>
        </field>
    </record>
</odoo>
