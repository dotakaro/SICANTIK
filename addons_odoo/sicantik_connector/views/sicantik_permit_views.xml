<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- SICANTIK Permit Form View -->
    <record id="view_sicantik_permit_form" model="ir.ui.view">
        <field name="name">sicantik.permit.form</field>
        <field name="model">sicantik.permit</field>
        <field name="arch" type="xml">
            <form string="SICANTIK Permit">
                <header>
                    <button name="action_mark_as_renewed" type="object" string="Mark as Renewed" 
                            class="btn-primary" invisible="status != 'active'"/>
                    <button name="action_view_history" type="object" string="View History" class="btn-secondary"/>
                    <button name="action_send_test_notification" type="object" string="Test Notification" class="btn-info"/>
                    <button name="action_send_opt_in_message" type="object" string="ðŸ“± Kirim Pesan Opt-In" 
                            class="btn-success" invisible="not partner_id"/>
                    <button name="action_send_notification_info" type="object" string="â„¹ï¸ Info Layanan Notifikasi" 
                            class="btn-info" invisible="not partner_id"/>
                    <field name="status" widget="statusbar" statusbar_visible="draft,active,expired,renewed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_history" type="object" class="oe_stat_button" icon="fa-history">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">History</span>
                            </div>
                        </button>
                    </div>
                    
                    <widget name="web_ribbon" title="Expired" bg_color="bg-danger" 
                            invisible="status != 'expired'"/>
                    <widget name="web_ribbon" title="Critical" bg_color="bg-warning" 
                            invisible="expiry_status != 'critical'"/>
                    
                    <div class="oe_title">
                        <label for="registration_id" class="oe_edit_only"/>
                        <h1>
                            <field name="registration_id" readonly="1"/>
                        </h1>
                        <h3>
                            <field name="permit_number" placeholder="Permit Number"/>
                        </h3>
                    </div>
                    
                    <group>
                        <group string="Applicant Information">
                            <field name="applicant_name"/>
                            <field name="partner_id"/>
                            <field name="permit_type_name"/>
                            <field name="permit_type_id"/>
                        </group>
                        <group string="Dates">
                            <field name="issue_date"/>
                            <field name="expiry_date"/>
                            <field name="received_date"/>
                            <field name="days_until_expiry" 
                                   decoration-danger="days_until_expiry &lt; 30"
                                   decoration-warning="days_until_expiry &lt; 60"/>
                            <field name="expiry_status" widget="badge"
                                   decoration-success="expiry_status == 'ok'"
                                   decoration-warning="expiry_status == 'warning'"
                                   decoration-danger="expiry_status == 'critical'"
                                   decoration-muted="expiry_status == 'expired'"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Expiry Notifications" name="expiry">
                            <group>
                                <group string="Notification Status">
                                    <field name="expiry_notified_90" readonly="1"/>
                                    <field name="expiry_notified_60" readonly="1"/>
                                    <field name="expiry_notified_30" readonly="1"/>
                                    <field name="expiry_notified_7" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="Renewal Information" name="renewal" 
                              invisible="is_renewal == False and renewal_permit_id == False">
                            <group>
                                <group>
                                    <field name="is_renewal"/>
                                    <field name="original_permit_id" invisible="is_renewal == False"/>
                                </group>
                                <group>
                                    <field name="renewal_permit_id" invisible="renewal_permit_id == False"/>
                                </group>
                            </group>
                        </page>
                        <page string="Additional Information" name="additional">
                            <group>
                                <field name="notes" placeholder="Additional notes..."/>
                                <field name="last_sync_date"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- SICANTIK Permit List View -->
    <record id="view_sicantik_permit_tree" model="ir.ui.view">
        <field name="name">sicantik.permit.tree</field>
        <field name="model">sicantik.permit</field>
        <field name="arch" type="xml">
            <list string="SICANTIK Permits" decoration-danger="expiry_status == 'expired'" 
                  decoration-warning="expiry_status == 'critical'" decoration-muted="status != 'active'">
                <field name="registration_id"/>
                <field name="permit_number"/>
                <field name="applicant_name"/>
                <field name="permit_type_name"/>
                <field name="issue_date"/>
                <field name="expiry_date"/>
                <field name="days_until_expiry"/>
                <field name="expiry_status" widget="badge"
                       decoration-success="expiry_status == 'ok'"
                       decoration-warning="expiry_status == 'warning'"
                       decoration-danger="expiry_status == 'critical'"/>
                <field name="status" widget="badge"
                       decoration-success="status == 'active'"
                       decoration-danger="status == 'expired'"
                       decoration-info="status == 'renewed'"/>
            </list>
        </field>
    </record>

    <!-- SICANTIK Permit Kanban View -->
    <record id="view_sicantik_permit_kanban" model="ir.ui.view">
        <field name="name">sicantik.permit.kanban</field>
        <field name="model">sicantik.permit</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="registration_id"/>
                <field name="permit_number"/>
                <field name="applicant_name"/>
                <field name="permit_type_name"/>
                <field name="expiry_date"/>
                <field name="days_until_expiry"/>
                <field name="expiry_status"/>
                <field name="status"/>
                <templates>
                    <!-- Odoo 18: Use 'card' instead of deprecated 'kanban-box' -->
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title"><field name="permit_number"/></strong>
                                    <br/>
                                    <span class="o_kanban_record_subtitle"><field name="applicant_name"/></span>
                                </div>
                                <span class="float-right">
                                    <field name="expiry_status" widget="badge"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="permit_type_name"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="status" widget="badge"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- SICANTIK Permit Search View -->
    <record id="view_sicantik_permit_search" model="ir.ui.view">
        <field name="name">sicantik.permit.search</field>
        <field name="model">sicantik.permit</field>
        <field name="arch" type="xml">
            <search string="Search Permits">
                <field name="registration_id"/>
                <field name="permit_number"/>
                <field name="applicant_name"/>
                <field name="permit_type_name"/>
                <field name="partner_id"/>
                <filter string="Active" name="active" domain="[('status', '=', 'active')]"/>
                <filter string="Expired" name="expired" domain="[('status', '=', 'expired')]"/>
                <filter string="Critical (â‰¤30 days)" name="critical" domain="[('expiry_status', '=', 'critical')]"/>
                <filter string="Warning (â‰¤60 days)" name="warning" domain="[('expiry_status', '=', 'warning')]"/>
                <filter string="Without Expiry Date" name="no_expiry" domain="[('expiry_date', '=', False)]"/>
                <separator/>
                <filter string="This Month" name="this_month" 
                        domain="[('create_date', '&gt;=', (context_today() - relativedelta(months=1)).strftime('%Y-%m-01'))]"/>
                <filter string="This Year" name="this_year" 
                        domain="[('create_date', '&gt;=', (context_today()).strftime('%Y-01-01'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                    <filter string="Permit Type" name="group_type" context="{'group_by': 'permit_type_name'}"/>
                    <filter string="Expiry Status" name="group_expiry" context="{'group_by': 'expiry_status'}"/>
                    <filter string="Issue Date" name="group_issue_date" context="{'group_by': 'issue_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- SICANTIK Permit Graph View -->
    <record id="view_sicantik_permit_graph" model="ir.ui.view">
        <field name="name">sicantik.permit.graph</field>
        <field name="model">sicantik.permit</field>
        <field name="arch" type="xml">
            <graph string="Permits Analysis" type="bar">
                <field name="permit_type_name" type="row"/>
                <field name="status" type="col"/>
            </graph>
        </field>
    </record>

    <!-- SICANTIK Permit Pivot View -->
    <record id="view_sicantik_permit_pivot" model="ir.ui.view">
        <field name="name">sicantik.permit.pivot</field>
        <field name="model">sicantik.permit</field>
        <field name="arch" type="xml">
            <pivot string="Permits Analysis">
                <field name="permit_type_name" type="row"/>
                <field name="status" type="col"/>
            </pivot>
        </field>
    </record>

    <!-- SICANTIK Permit Action -->
    <record id="action_sicantik_permit" model="ir.actions.act_window">
        <field name="name">Permits</field>
        <field name="res_model">sicantik.permit</field>
        <field name="view_mode">kanban,list,form,graph,pivot</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No permits found
            </p>
            <p>
                Permits will be automatically synced from SICANTIK server.
            </p>
        </field>
    </record>
</odoo>

