<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_whatsapp_template_master_tree" model="ir.ui.view">
        <field name="name">sicantik.whatsapp.template.master.tree</field>
        <field name="model">sicantik.whatsapp.template.master</field>
        <field name="arch" type="xml">
            <list string="Master Templates">
                <field name="template_key"/>
                <field name="name"/>
                <field name="parameter_count"/>
                <field name="meta_status" widget="badge"
                       decoration-success="meta_status == 'approved'"
                       decoration-warning="meta_status == 'configured'"
                       decoration-danger="meta_status == 'rejected'"
                       decoration-muted="meta_status == 'not_configured'"/>
                <field name="watzap_status" widget="badge"
                       decoration-success="watzap_status == 'configured'"
                       decoration-muted="watzap_status == 'not_configured'"/>
                <field name="fonnte_status" widget="badge"
                       decoration-success="fonnte_status == 'configured'"
                       decoration-muted="fonnte_status == 'not_configured'"/>
                <field name="usage_count"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_whatsapp_template_master_form" model="ir.ui.view">
        <field name="name">sicantik.whatsapp.template.master.form</field>
        <field name="model">sicantik.whatsapp.template.master</field>
        <field name="arch" type="xml">
            <form string="Master Template">
                <header>
                    <button name="action_sync_from_meta" type="object" string="Sync from Meta" 
                            class="btn-primary" help="Auto-detect template Meta berdasarkan nama"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="object" name="increment_usage" class="oe_stat_button" icon="fa-paper-plane">
                            <field name="usage_count" widget="statinfo" string="Penggunaan"/>
                        </button>
                    </div>

                    <group>
                        <group>
                            <field name="template_key" placeholder="e.g., permit_ready"/>
                            <field name="name" placeholder="e.g., Notifikasi Izin Selesai"/>
                            <field name="language"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="parameter_count" readonly="1"/>
                            <field name="last_used_date" readonly="1"/>
                        </group>
                    </group>

                    <group string="Template Content">
                        <field name="body_preview" placeholder="Yth. {{partner_name}},&#10;&#10;Izin Anda dengan nomor {{permit_number}} telah selesai diproses dengan status: {{status}}.&#10;&#10;Terima kasih."/>
                        <field name="description" placeholder="Deskripsi singkat fungsi template"/>
                    </group>

                    <group string="Parameter Configuration">
                        <field name="parameter_list" widget="ace" 
                               options="{'mode': 'json'}"
                               placeholder='["partner_name", "permit_number", "status", "expiry_date"]'/>
                    </group>

                    <notebook>
                        <page string="Meta Official" name="meta">
                            <group>
                                <group>
                                    <field name="meta_template_id" options="{'no_create': True}"/>
                                    <field name="meta_template_name" placeholder="e.g., izin_selesai_diproses"/>
                                </group>
                                <group>
                                    <field name="meta_status"/>
                                </group>
                            </group>
                            <div class="alert alert-info" role="alert">
                                <p><strong>Cara konfigurasi Meta:</strong></p>
                                <ul class="mb-0">
                                    <li>Set <strong>Meta Template Name</strong> sesuai nama di Meta Console</li>
                                    <li>Klik tombol <strong>Sync from Meta</strong> untuk auto-link</li>
                                    <li>Atau pilih manual dari dropdown <strong>Meta Template</strong></li>
                                </ul>
                            </div>
                        </page>

                        <page string="Watzap.id" name="watzap">
                            <group>
                                <group>
                                    <field name="watzap_template_id" placeholder="e.g., izin_selesai"/>
                                    <field name="watzap_template_name" placeholder="Nama template di dashboard Watzap.id"/>
                                </group>
                                <group>
                                    <field name="watzap_status"/>
                                </group>
                            </group>
                            <div class="alert alert-info" role="alert">
                                <p><strong>Cara konfigurasi Watzap.id:</strong></p>
                                <ul class="mb-0">
                                    <li>Buat template di dashboard <a href="https://app.watzap.id" target="_blank">Watzap.id</a></li>
                                    <li>Copy <strong>Template ID</strong> dan <strong>Template Name</strong></li>
                                    <li>Paste di field di atas</li>
                                    <li>Set status menjadi <strong>Configured</strong></li>
                                </ul>
                            </div>
                        </page>

                        <page string="Fonnte" name="fonnte">
                            <group>
                                <group>
                                    <field name="fonnte_template_id" placeholder="e.g., template_001"/>
                                    <field name="fonnte_template_name" placeholder="Nama template di dashboard Fonnte"/>
                                </group>
                                <group>
                                    <field name="fonnte_status"/>
                                </group>
                            </group>
                            <div class="alert alert-info" role="alert">
                                <p><strong>Cara konfigurasi Fonnte:</strong></p>
                                <ul class="mb-0">
                                    <li>Buat template di dashboard <a href="https://fonnte.com" target="_blank">Fonnte</a></li>
                                    <li>Copy <strong>Template ID</strong> dan <strong>Template Name</strong></li>
                                    <li>Paste di field di atas</li>
                                    <li>Set status menjadi <strong>Configured</strong></li>
                                </ul>
                            </div>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_whatsapp_template_master" model="ir.actions.act_window">
        <field name="name">Master Templates</field>
        <field name="res_model">sicantik.whatsapp.template.master</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Buat master template WhatsApp pertama Anda
            </p>
            <p>
                Master template menyimpan mapping ke template berbagai provider (Meta / Watzap.id / Fonnte).
                Sistem akan otomatis memilih provider yang tepat saat mengirim pesan.
            </p>
        </field>
    </record>

</odoo>

