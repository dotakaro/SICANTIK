<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="view_notification_preview_wizard_form" model="ir.ui.view">
        <field name="name">sicantik.notification.preview.wizard.form</field>
        <field name="model">sicantik.notification.preview.wizard</field>
        <field name="arch" type="xml">
            <form string="Preview Notifikasi">
                <sheet>
                    <group>
                        <field name="rule_id"/>
                        <field name="partner_id"/>
                    </group>
                    <group>
                        <field name="preview_text" nolabel="1"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Tutup" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <record id="action_notification_preview_wizard" model="ir.actions.act_window">
        <field name="name">Preview Notifikasi</field>
        <field name="res_model">sicantik.notification.preview.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    
</odoo>

