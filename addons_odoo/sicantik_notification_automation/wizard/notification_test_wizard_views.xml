<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="view_notification_test_wizard_form" model="ir.ui.view">
        <field name="name">sicantik.notification.test.wizard.form</field>
        <field name="model">sicantik.notification.test.wizard</field>
        <field name="arch" type="xml">
            <form string="Test Send Notifikasi">
                <sheet>
                    <group>
                        <field name="partner_id"/>
                        <field name="template_key"/>
                    </group>
                    <group>
                        <field name="context_values" widget="ace" options="{'mode': 'json'}"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_send_test" string="Kirim Test" type="object" class="oe_highlight"/>
                    <button string="Batal" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <record id="action_notification_test_wizard" model="ir.actions.act_window">
        <field name="name">Test Send Notifikasi</field>
        <field name="res_model">sicantik.notification.test.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    
</odoo>

