<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Document Upload Wizard Form -->
    <record id="view_document_upload_wizard_form" model="ir.ui.view">
        <field name="name">document.upload.wizard.form</field>
        <field name="model">document.upload.wizard</field>
        <field name="arch" type="xml">
            <form string="Upload Dokumen">
                <sheet>
                    <group>
                        <group string="PILIH IZIN">
                            <!-- 
                                Enhanced permit selection dengan search di multiple fields:
                                - Nama Pemohon
                                - Jenis Izin
                                - Nomor Izin
                                - Registration ID
                                
                                Display format: Nama Pemohon - Jenis Izin (No. Izin)
                            -->
                            <field name="permit_id" 
                                   options="{'no_create': True, 'no_open': True, 'no_quick_create': True}"
                                   placeholder="Ketik nama pemohon, jenis izin, atau nomor izin..."
                                   context="{'search_default_active': 1}"
                                   help="Search berdasarkan: Nama Pemohon, Jenis Izin, Nomor Izin, atau ID Pendaftaran"/>
                            
                            <!-- Info fields - auto-filled setelah pilih permit -->
                            <field name="applicant_name" readonly="1" 
                                   invisible="not permit_id"
                                   string="ðŸ‘¤ Nama Pemohon"/>
                            <field name="permit_type_name" readonly="1" 
                                   invisible="not permit_id"
                                   string="ðŸ“‹ Jenis Izin"/>
                            <field name="permit_number" readonly="1" 
                                   invisible="not permit_id"
                                   string="ðŸ“„ Nomor Izin"/>
                            <field name="permit_type_id" invisible="1"/>
                        </group>
                    </group>
                    
                    <!-- Alert info untuk user -->
                    <div class="alert alert-info" role="alert" style="margin: 10px 0;" invisible="permit_id">
                        <strong>ðŸ’¡ Tip Pencarian:</strong><br/>
                        â€¢ Ketik nama pemohon untuk mencari berdasarkan nama<br/>
                        â€¢ Ketik jenis izin (misal: "perdagangan", "industri")<br/>
                        â€¢ Ketik nomor izin (misal: "123/2025")<br/>
                        â€¢ Ketik ID pendaftaran (misal: "12345")
                    </div>
                    
                    <group>
                        <group string="Upload File">
                            <field name="file_data" filename="filename"/>
                            <field name="filename" invisible="1"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Informasi Dokumen">
                            <field name="document_name"/>
                            <field name="notes" placeholder="Tambahkan catatan..."/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Opsi">
                            <field name="auto_request_signature"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_upload" type="object" string="Upload" class="btn-primary"/>
                    <button name="action_cancel" type="object" string="Batal" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Document Upload Wizard Action -->
    <record id="action_document_upload_wizard" model="ir.actions.act_window">
        <field name="name">Upload Dokumen</field>
        <field name="res_model">document.upload.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    
    <!-- Add Upload button to Documents menu -->
    <menuitem id="menu_document_upload"
              name="Upload Dokumen"
              parent="menu_sicantik_documents"
              action="action_document_upload_wizard"
              sequence="30"/>
</odoo>

