<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Signature Workflow Form View -->
    <record id="view_signature_workflow_form" model="ir.ui.view">
        <field name="name">signature.workflow.form</field>
        <field name="model">signature.workflow</field>
        <field name="arch" type="xml">
            <form string="Workflow Tanda Tangan">
                <header>
                    <button name="action_submit_for_approval" type="object" string="Ajukan Approval"
                            class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_approve" type="object" string="Setujui"
                            class="btn-success" invisible="state != 'pending'"
                            groups="base.group_system"/>
                    <button name="action_reject" type="object" string="Tolak"
                            class="btn-danger" invisible="state not in ['pending', 'approved']"
                            groups="base.group_system"/>
                    <button name="action_sign" type="object" string="Tandatangani"
                            class="btn-primary" invisible="state != 'approved'"
                            groups="base.group_system"/>
                    <button name="action_cancel" type="object" string="Batalkan"
                            class="btn-warning" invisible="state in ['signed', 'cancelled']"
                            confirm="Apakah Anda yakin ingin membatalkan workflow ini?"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,pending,approved,signing,signed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_document" type="object" class="oe_stat_button" icon="fa-file-pdf-o">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Dokumen</span>
                            </div>
                        </button>
                    </div>
                    
                    <widget name="web_ribbon" title="Tertandatangani" bg_color="bg-success"
                            invisible="state != 'signed'"/>
                    <widget name="web_ribbon" title="Ditolak" bg_color="bg-danger"
                            invisible="state != 'rejected'"/>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="document_number"/>
                        </h1>
                        <h3>
                            Izin: <field name="permit_number"/>
                        </h3>
                    </div>
                    
                    <group>
                        <group string="Dokumen">
                            <field name="document_id" options="{'no_create': True}"/>
                        </group>
                        <group string="Progress">
                            <field name="progress" widget="progressbar"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Permintaan" name="request">
                            <group>
                                <group>
                                    <field name="requester_id" readonly="1"/>
                                    <field name="request_date" readonly="1"/>
                                </group>
                            </group>
                            <group string="Catatan Permintaan">
                                <field name="request_notes" placeholder="Tambahkan catatan permintaan..."/>
                            </group>
                        </page>
                        
                        <page string="Approval" name="approval" invisible="state == 'draft'">
                            <group>
                                <group>
                                    <field name="approver_id" readonly="1"/>
                                    <field name="approval_date" readonly="1"/>
                                </group>
                            </group>
                            <group string="Catatan Approval">
                                <field name="approval_notes" placeholder="Tambahkan catatan approval..."/>
                            </group>
                        </page>
                        
                        <page string="Tanda Tangan" name="signature" invisible="state not in ['signing', 'signed']">
                            <group>
                                <group>
                                    <field name="signer_id" readonly="1"/>
                                    <field name="signature_date" readonly="1"/>
                                </group>
                            </group>
                            <group string="Catatan Tanda Tangan">
                                <field name="signature_notes" placeholder="Tambahkan catatan tanda tangan..."/>
                            </group>
                        </page>
                        
                        <page string="Penolakan" name="rejection" invisible="state != 'rejected'">
                            <group>
                                <group>
                                    <field name="rejected_by" readonly="1"/>
                                    <field name="rejection_date" readonly="1"/>
                                </group>
                            </group>
                            <group string="Alasan Penolakan">
                                <field name="rejection_reason" placeholder="Masukkan alasan penolakan..." 
                                       required="state == 'rejected'"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Signature Workflow List View -->
    <record id="view_signature_workflow_tree" model="ir.ui.view">
        <field name="name">signature.workflow.tree</field>
        <field name="model">signature.workflow</field>
        <field name="arch" type="xml">
            <list string="Workflow Tanda Tangan"
                  decoration-success="state == 'signed'"
                  decoration-warning="state == 'pending'"
                  decoration-info="state == 'approved'"
                  decoration-danger="state == 'rejected'"
                  decoration-muted="state == 'cancelled'">
                <field name="document_number"/>
                <field name="permit_number"/>
                <field name="requester_id"/>
                <field name="request_date"/>
                <field name="approver_id"/>
                <field name="signer_id"/>
                <field name="progress" widget="progressbar"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'signed'"
                       decoration-warning="state == 'pending'"
                       decoration-info="state == 'approved'"
                       decoration-danger="state == 'rejected'"/>
            </list>
        </field>
    </record>

    <!-- Signature Workflow Kanban View -->
    <record id="view_signature_workflow_kanban" model="ir.ui.view">
        <field name="name">signature.workflow.kanban</field>
        <field name="model">signature.workflow</field>
        <field name="arch" type="xml">
            <kanban string="Workflow" default_group_by="state" class="o_kanban_small_column">
                <field name="document_number"/>
                <field name="permit_number"/>
                <field name="state"/>
                <field name="progress"/>
                <field name="requester_id"/>
                <field name="create_date"/>
                <templates>
                    <!-- Odoo 18: Use 'card' instead of deprecated 'kanban-box' -->
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top mb-2">
                                    <strong class="o_kanban_record_title">
                                        <field name="document_number"/>
                                    </strong>
                                    <div class="o_dropdown_kanban dropdown">
                                        <a class="dropdown-toggle o-no-caret btn" role="button" data-bs-toggle="dropdown" href="#" aria-label="Dropdown menu">
                                            <span class="fa fa-ellipsis-v"/>
                                        </a>
                                        <div class="dropdown-menu" role="menu">
                                            <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                            <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="o_kanban_record_body">
                                    <div class="row g-0 mb-1">
                                        <div class="col-4 text-muted">Izin:</div>
                                        <div class="col-8"><field name="permit_number"/></div>
                                    </div>
                                    <div class="row g-0 mb-2">
                                        <div class="col-4 text-muted">Peminta:</div>
                                        <div class="col-8"><field name="requester_id"/></div>
                                    </div>
                                    <div class="row g-0 mb-1">
                                        <div class="col-12">
                                            <div class="text-muted small mb-1">Progress:</div>
                                            <field name="progress" widget="progressbar"/>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="o_kanban_record_bottom mt-2">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="state" widget="badge" 
                                               decoration-success="state == 'signed'"
                                               decoration-info="state == 'approved'"
                                               decoration-warning="state == 'pending'"
                                               decoration-muted="state == 'draft'"
                                               decoration-danger="state == 'rejected'"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="create_date" widget="date"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Signature Workflow Search View -->
    <record id="view_signature_workflow_search" model="ir.ui.view">
        <field name="name">signature.workflow.search</field>
        <field name="model">signature.workflow</field>
        <field name="arch" type="xml">
            <search string="Cari Workflow">
                <field name="document_number"/>
                <field name="permit_number"/>
                <field name="requester_id"/>
                <field name="approver_id"/>
                <field name="signer_id"/>
                
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Menunggu Approval" name="pending" domain="[('state', '=', 'pending')]"/>
                <filter string="Disetujui" name="approved" domain="[('state', '=', 'approved')]"/>
                <filter string="Tertandatangani" name="signed" domain="[('state', '=', 'signed')]"/>
                <filter string="Ditolak" name="rejected" domain="[('state', '=', 'rejected')]"/>
                
                <separator/>
                <filter string="Workflow Saya" name="my_workflows" 
                        domain="[('requester_id', '=', uid)]"/>
                <filter string="Perlu Approval Saya" name="need_my_approval" 
                        domain="[('approver_id', '=', uid), ('state', '=', 'pending')]"
                        groups="base.group_system"/>
                
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Peminta" name="group_requester" context="{'group_by': 'requester_id'}"/>
                    <filter string="Penyetuju" name="group_approver" context="{'group_by': 'approver_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Signature Workflow Action -->
    <record id="action_signature_workflow" model="ir.actions.act_window">
        <field name="name">Workflow Tanda Tangan</field>
        <field name="res_model">signature.workflow</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_pending': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Belum ada workflow
            </p>
            <p>
                Workflow akan dibuat otomatis saat dokumen diminta untuk ditandatangani.
            </p>
        </field>
    </record>
</odoo>

