<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- BSRE Config Form View -->
    <record id="view_bsre_config_form" model="ir.ui.view">
        <field name="name">bsre.config.form</field>
        <field name="model">bsre.config</field>
        <field name="arch" type="xml">
            <form string="Konfigurasi BSRE">
                <header>
                    <button name="action_test_connection" type="object" string="Tes Koneksi" 
                            class="btn-primary"/>
                    <button name="action_view_statistics" type="object" string="Lihat Statistik" 
                            class="btn-secondary"/>
                    <field name="connection_status" widget="badge"
                           decoration-success="connection_status == 'connected'"
                           decoration-danger="connection_status == 'error'"
                           decoration-muted="connection_status == 'disconnected'"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_statistics" type="object" class="oe_stat_button" icon="fa-pencil">
                            <field name="total_signatures" widget="statinfo" string="Total Tanda Tangan"/>
                        </button>
                        <button name="action_view_statistics" type="object" class="oe_stat_button" icon="fa-check">
                            <field name="successful_signatures" widget="statinfo" string="Berhasil"/>
                        </button>
                        <button name="action_view_statistics" type="object" class="oe_stat_button" icon="fa-times">
                            <field name="failed_signatures" widget="statinfo" string="Gagal"/>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Nama Konfigurasi"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="API Configuration (Basic Auth)">
                            <field name="api_url"/>
                            <field name="username"/>
                            <field name="password" password="True"/>
                            <field name="active"/>
                        </group>
                        <group string="Signing Credentials">
                            <field name="signing_identifier_type"/>
                            <field name="signing_identifier" 
                                   placeholder="NIK atau Email"/>
                            <field name="use_otp"/>
                            <p colspan="2" class="text-muted">
                                Note: Passphrase akan diminta saat proses signing untuk keamanan.
                            </p>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Certificate Information">
                            <field name="certificate_id" readonly="1"/>
                            <field name="certificate_owner" readonly="1"/>
                            <field name="certificate_valid_until" readonly="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Signature Settings" name="signature">
                            <group>
                                <group string="Visibility &amp; Appearance">
                                    <field name="signature_visible"/>
                                    <field name="signature_image" widget="image" 
                                           class="oe_avatar" 
                                           options="{'size': [150, 100]}"
                                           invisible="signature_visible == False"/>
                                    <field name="signature_image_filename" invisible="1"/>
                                    <p colspan="2" class="text-muted" invisible="signature_visible == False">
                                        Upload logo atau gambar tanda tangan (PNG dengan transparansi). 
                                        Jika kosong, akan menggunakan placeholder transparan.
                                    </p>
                                </group>
                                <group string="Position &amp; Page">
                                    <field name="signature_page"/>
                                    <field name="signature_position"/>
                                </group>
                            </group>
                            
                            <group>
                                <group string="Dimensions (pixels)">
                                    <field name="signature_width"/>
                                    <field name="signature_height"/>
                                    <p colspan="2" class="text-muted">
                                        Default: 100 x 75 pixels. Sesuaikan dengan ukuran logo Anda.
                                    </p>
                                </group>
                                <group string="Custom Position Override">
                                    <field name="use_custom_position"/>
                                    <field name="custom_position_x" 
                                           invisible="use_custom_position == False"
                                           required="use_custom_position == True"/>
                                    <field name="custom_position_y" 
                                           invisible="use_custom_position == False"
                                           required="use_custom_position == True"/>
                                    <p colspan="2" class="text-muted" invisible="use_custom_position == False">
                                        <strong>Info:</strong> X dari kiri (0=kiri), Y dari bawah (0=bawah).
                                        <br/>Koordinat dalam pixel. Preset posisi akan di-override jika diaktifkan.
                                    </p>
                                </group>
                            </group>
                            
                            <group>
                                <group string="Timeout &amp; Retry">
                                    <field name="api_timeout"/>
                                    <field name="max_retry"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Statistics" name="statistics">
                            <group>
                                <field name="last_signature_date" readonly="1"/>
                            </group>
                        </page>
                        
                        <page string="Connection Status" name="status">
                            <group>
                                <field name="last_error" widget="text" readonly="1" 
                                       invisible="last_error == False"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- BSRE Config List View -->
    <record id="view_bsre_config_tree" model="ir.ui.view">
        <field name="name">bsre.config.tree</field>
        <field name="model">bsre.config</field>
        <field name="arch" type="xml">
            <list string="Konfigurasi BSRE">
                <field name="name"/>
                <field name="api_url"/>
                <field name="certificate_owner"/>
                <field name="certificate_valid_until"/>
                <field name="connection_status" widget="badge"
                       decoration-success="connection_status == 'connected'"
                       decoration-danger="connection_status == 'error'"
                       decoration-warning="connection_status == 'disconnected'"/>
                <field name="total_signatures"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- BSRE Config Action -->
    <record id="action_bsre_config" model="ir.actions.act_window">
        <field name="name">Konfigurasi BSRE</field>
        <field name="res_model">bsre.config</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Buat konfigurasi BSRE pertama Anda
            </p>
            <p>
                Konfigurasikan koneksi ke BSRE API untuk tanda tangan digital.
            </p>
        </field>
    </record>
</odoo>

