<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="res_config_settings_view_form_inherit_tte" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.tte</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <form position="inside">
                <div class="app_settings_block" data-string="TTE Verification" string="TTE Verification" data-key="sicantik_tte">
                    <h2>TTE Verification</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="tte_verification_base_url"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="tte_verification_base_url"/>
                                <p class="text-muted">
                                    Base URL untuk QR code verifikasi dokumen TTE.
                                    Contoh: https://sicantik.dotakaro.com
                                </p>
                                <p class="text-muted">
                                    URL ini akan digunakan untuk generate QR code verification URL.
                                    Pastikan domain ini dapat diakses publik untuk verifikasi dokumen.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </field>
    </record>

</odoo>

