<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_employee_view_form" model="ir.ui.view">
        <field name="name">hr.employee.view.form.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr_payroll.payroll_hr_employee_view_form"/>
        <field name="priority">60</field>
        <field name="arch" type="xml">
            <group name="settings_group" position="inside">
                <group string="Accounting" groups="analytic.group_analytic_accounting">
                    <field name="analytic_account_id" domain="['|', ('company_id', '=', company_id), ('company_id', '=', False)]"/>
                </group>
            </group>
        </field>
    </record>
</odoo>
