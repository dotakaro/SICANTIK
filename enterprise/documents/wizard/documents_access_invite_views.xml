<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="documents_access_invite_view_form" model="ir.ui.view">
        <field name="name">documents.access.invite.view.form</field>
        <field name="model">documents.access.invite</field>
        <field name="arch" type="xml">
            <form class="o_document_invite_wizard">
                <sheet>
                    <group>
                        <group colspan="2">
                            <field name="partner_ids" widget="many2many_tags_email"
                                placeholder="Add people or email addresses"
                                context="{'show_email': True, 'form_view_ref': 'base.view_partner_simple_form'}"
                                string="People"
                            />
                        </group>
                        <group>
                            <field name="role"/>
                            <field name="notify" widget="boolean_toggle"/>
                        </group>
                    </group>
                    <div invisible="not notify">
                        <label for="notify_message" string="Message"/>
                        <field name="notify_message" class="embedded-editor-height-4" placeholder="Extra comments..."/>
                    </div>
                </sheet>
                <footer>
                    <button string="Share"
                        type="object" name="action_invite_members" class="btn-primary"/>
                    <button string="Discard" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
