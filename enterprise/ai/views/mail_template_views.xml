<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="mail_template_view_form" model="ir.ui.view">
            <field name="name">mail.template.view.form.inherit.ai</field>
            <field name="model">mail.template</field>
            <field name="inherit_id" ref="mail.email_template_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='content']//field[@name='attachment_ids']/following-sibling::div[hasclass('text-muted')]" position="replace">
                    <div class="text-muted">Write /field to insert values or /prompt to integrate AI-generated dynamic content.</div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
