        <xpath expr="//th[@id='taxes_header']" position="attributes">
            <attribute name="t-if" add="not sale_order.fiscal_position_id.is_avatax" separator="and"/>
        </xpath>
        <xpath expr="//td[@id='taxes']" position="attributes">
            <attribute name="t-if" add="not sale_order.fiscal_position_id.is_avatax" separator="and"/>
        </xpath>
    </template>
</odoo>
