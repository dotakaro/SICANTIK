<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_employee_view_form" model="ir.ui.view">
        <field name="name">hr.employee.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr_contract_salary.hr_contract_salary_view_employee_form"/>
        <field name="arch" type="xml">
            <separator name="employer_costs" position="attributes">
                <attribute name="invisible">wage_type == 'hourly'</attribute>
            </separator>
            <label name="final_yearly_costs" position="attributes">
                <attribute name="invisible">wage_type == 'hourly'</attribute>
            </label>
            <div name="final_yearly_costs" position="attributes">
                <attribute name="invisible">wage_type == 'hourly'</attribute>
            </div>
            <label name="monthly_yearly_costs" position="attributes">
                <attribute name="invisible">wage_type == 'hourly'</attribute>
            </label>
            <div name="monthly_yearly_costs" position="attributes">
                <attribute name="invisible">wage_type == 'hourly'</attribute>
            </div>
            <label name="wage_on_signature" position="attributes">
                <attribute name="invisible">wage_type == 'hourly'</attribute>
            </label>
            <div name="wage_on_signature" position="attributes">
                <attribute name="invisible">wage_type == 'hourly'</attribute>
            </div>
            <xpath expr="//div[@name='wage_on_signature_period_label']" position="attributes">
                <attribute name="invisible">schedule_pay != 'monthly'</attribute>
            </xpath>
            <xpath expr="//div[@name='wage_on_signature_period_label']" position="after">
                <div class="mb-3" invisible="schedule_pay != 'annually'">/ year</div>
                <div class="mb-3" invisible="schedule_pay != 'semi-annually'">/ half-year</div>
                <div class="mb-3" invisible="schedule_pay != 'quarterly'">/ quarter</div>
                <div class="mb-3" invisible="schedule_pay != 'bi-monthly'">/ two months</div>
                <div class="mb-3" invisible="schedule_pay != 'semi-monthly'">/ half-month</div>
                <div class="mb-3" invisible="schedule_pay != 'bi-weekly'">/ two weeks</div>
                <div class="mb-3" invisible="schedule_pay != 'weekly'">/ week</div>
                <div class="mb-3" invisible="schedule_pay != 'daily'">/ day</div>
            </xpath>
        </field>
    </record>
</odoo>
