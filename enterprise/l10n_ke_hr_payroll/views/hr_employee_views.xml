<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="payroll_hr_employee_view_form" model="ir.ui.view">
        <field name="name">hr.employee.view.form.inherit.l10n.ke.hr.payroll</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr_payroll.payroll_hr_employee_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='citizenship']" position="inside">
                <field name="l10n_ke_pin" invisible="company_country_code != 'KE'"/>
                <field name="l10n_ke_helb_number" invisible="company_country_code != 'KE'"/>
                <field name="l10n_ke_mortgage" invisible="company_country_code != 'KE'"/>
                <field name="l10n_ke_nssf_number" invisible="company_country_code != 'KE'"/>
                <field name="l10n_ke_kra_pin" invisible="company_country_code != 'KE'"/>
                <field name="l10n_ke_nhif_number" invisible="company_country_code != 'KE'"/>
                <field name="l10n_ke_shif_number" invisible="company_country_code != 'KE'"/>
            </xpath>
            <group name="payroll_group" position="inside">
                <group string="Tax Deduction" name="l10n_ke_tax_deduction" class="o_form_fw_labels" invisible="country_code != 'KE'">
                    <label for="l10n_ke_pension_contribution" invisible="wage_type == 'hourly'"/>
                    <div class="o_row" invisible="wage_type == 'hourly'">
                        <field name="l10n_ke_pension_contribution" class="o_hr_narrow_field" nolabel="1"/>
                        <span>/ month</span>
                    </div>
                    <field name="l10n_ke_is_secondary"/>

                    <separator string="Benefits"/>
                    <label for="l10n_ke_food_allowance"/>
                    <div class="o_row">
                        <field name="l10n_ke_food_allowance" class="o_hr_narrow_field" nolabel="1"/>
                        <span>/ month</span>
                    </div>
                    <label for="l10n_ke_airtime_allowance"/>
                    <div class="o_row">
                        <field name="l10n_ke_airtime_allowance" class="o_hr_narrow_field" nolabel="1"/>
                        <span>/ month</span>
                    </div>
                    <label for="l10n_ke_pension_allowance"/>
                    <div class="o_row">
                        <field name="l10n_ke_pension_allowance" class="o_hr_narrow_field" nolabel="1"/>
                        <span>/ month</span>
                    </div>

                    <separator string="Insurance"/>
                    <label for="l10n_ke_voluntary_medical_insurance"/>
                    <div class="o_row">
                        <field name="l10n_ke_voluntary_medical_insurance" class="o_hr_narrow_field" nolabel="1"/>
                        <span>/ month</span>
                    </div>
                    <label for="l10n_ke_life_insurance"/>
                    <div class="o_row">
                        <field name="l10n_ke_life_insurance" class="o_hr_narrow_field" nolabel="1"/>
                        <span>/ month</span>
                    </div>
                    <field name="l10n_ke_is_li_managed_by_employee" invisible="not l10n_ke_life_insurance"/>
                    <label for="l10n_ke_education"/>
                    <div class="o_row">
                        <field name="l10n_ke_education" class="o_hr_narrow_field" nolabel="1"/>
                        <span>/ month</span>
                    </div>
                </group>
            </group>
        </field>
    </record>
</odoo>
