<?xml version="1.0" encoding="utf-8"?>
<templates>
    <t t-name="account_accountant.BankRecLineToReconcile">
        <div class="o_row" t-on-click.stop="onClickLine">
            <div class="o_line_name d-flex align-items-center">
                <span t-esc="lineData.account_id.display_name" class="text-truncate"/>
            </div>
            <div class="d-flex gap-2 align-items-center">
                <button class="btn btn-link p-0" t-esc="lineData.partner_id.display_name" t-on-click.stop="openPartner"/>
            </div>
            <span t-if="!!moveData.display_name and moveData.id !== statementLineData.move_id.id" class="hide-mobile">
                <a class="btn btn-link p-0 text-start" t-on-click.stop="openMove">
                    <t t-esc="moveData.display_name"/>
                </a>
            </span>
            <div class="o_line_amount d-flex align-items-center justify-content-between">
                <span class="text-muted w-50 text-end" t-if="hasDifferentCurrencies">
                    <span t-ref="line-info-ref" t-on-click.stop="openLineInfoPopOver" t-esc="formattedAmountCurrencyOfLine"/>
                </span>
                <span class="text-end w-100" t-if="!hasDifferentCurrencies">
                    <span t-ref="line-info-ref" t-on-click.stop="openLineInfoPopOver" t-esc="formattedAmountCurrencyOfStatementLine"/>
                </span>
            </div>
            <div class="o_line_to_reconcile_button hide-mobile">
                <i class="fa fa-pencil" t-on-click.stop="toggleEditLine"/>
                <i class="fa fa-trash" t-on-click.stop="deleteLine"/>
            </div>
        </div>
    </t>
</templates>
