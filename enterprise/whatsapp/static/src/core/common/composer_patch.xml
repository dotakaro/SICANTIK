<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="whatsapp.Composer.quickActionButton" t-inherit="mail.Composer.quickActionButton" t-inherit-mode="extension">
        <xpath expr="//button" position="inside">
            <t t-if="action.id == 'revive-whatsapp-conversation'">Revive Conversation</t>
        </xpath>
        <xpath expr="//button" position="attributes">
            <attribute name="t-att-style" add="action.id == 'revive-whatsapp-conversation' ? 'aspect-ratio: 0;' : ''"/>
        </xpath>
    </t>

</templates>
