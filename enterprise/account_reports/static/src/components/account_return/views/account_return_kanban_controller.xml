<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="account_reports.AccountReturnKanbanController" t-inherit="web.KanbanView" t-inherit-mode="primary">
        <Layout position="attributes">
            <attribute name="className">'o_account_return_kanban_container d-flex'</attribute>
        </Layout>

        <Layout position="inside">
            <t t-set-slot="control-panel-navigation-additional" t-if="this.chatterState.returnId">
                <button
                    t-on-click="() => this.toggleChatter()"
                    data-tooltip="Chatter"
                    class="btn btn-secondary o_switch_view o_kanban d-none d-md-inline"
                    t-att-class="{'active': this.chatterState.visible}">
                        <i t-attf-class="fa fa-fw {{ this.chatterState.visible ? 'fa-close' : 'fa-comments-o' }} mt-1"/>
                </button>
            </t>
        </Layout>

        <t t-component="props.Renderer" position="attributes">
            <attribute name="chatterState">this.chatterState</attribute>
        </t>

    </t>
</templates>
