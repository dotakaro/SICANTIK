<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_return_kanban_view" model="ir.ui.view">
        <field name="name">l10n_be.account.return.kanban</field>
        <field name="model">account.return</field>
        <field name="inherit_id" ref="account_reports.account_return_kanban_view"/>
        <field name="arch" type="xml">
            <t id="account_tax_return_states" position="after">
                <t t-if="record.type_external_id.raw_value == 'l10n_be_reports.be_vat_listing_return_type' or record.type_external_id.raw_value == 'l10n_be_reports.be_ec_sales_list_return_type'" t-set="states" t-value="[{value: 'reviewed', display:reviewedLabel}, {value: 'submitted', display:submittedLabel}]"/>
                <t t-if="record.type_external_id.raw_value == 'l10n_be_reports.be_isoc_prepayment_return_type'" t-set="states" t-value="[{value: 'paid', display:paidLabel}]"/>
            </t>

            <t id="default_buttons" position="before">
                <t t-elif="record.type_external_id.raw_value == 'l10n_be_reports.be_isoc_prepayment_return_type'">
                    <button invisible="is_completed" class="btn btn-primary" type="object" name="action_pay">Pay</button>
                </t>
            </t>

            <a name="action_reset_tax_return_common" position="after">
                <a invisible="state == 'new' and not is_completed or type_external_id != 'l10n_be_reports.be_isoc_prepayment_return_type'" class="dropdown-item" type="object" name="l10n_be_reset_tax_prepayment" string="Reset"/>
                <a invisible="state == 'new' and not is_completed or type_external_id not in ('l10n_be_reports.be_vat_listing_return_type', 'l10n_be_reports.be_ec_sales_list_return_type')" class="dropdown-item" type="object" name="l10n_be_reset_2_sates_common" string="Reset"/>
            </a>

            <h2 id="return_amount_to_pay" position="attributes">
                <attribute name="invisible" add="type_external_id != 'l10n_be_reports.be_isoc_prepayment_return_type' or (type_external_id == 'l10n_be_reports.be_isoc_prepayment_return_type' and state != 'paid')" separator="and"/>
            </h2>
        </field>
    </record>
</odoo>
