<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="hr_employee_view_form" model="ir.ui.view">
        <field name="name">hr.employee.view.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr_payroll.payroll_hr_employee_view_form"/>
        <field name="arch" type="xml">
            <group name="payroll_group" position="inside">
                <group string="Allowances" invisible="country_code != 'JO'">
                    <label for="l10n_jo_tax_exemption" string="Tax Exemption"/>
                    <div class="o_row mw-50" name="l10n_jo_tax_exemption">
                        <field name="l10n_jo_tax_exemption"/>
                        <span>/ year</span>
                    </div>
                    <label for="l10n_jo_housing_allowance" string="Housing"/>
                    <div class="o_row mw-50" name="l10n_jo_housing_allowance">
                        <field name="l10n_jo_housing_allowance"/>
                        <span>/ month</span>
                    </div>
                    <label for="l10n_jo_transportation_allowance" string="Transportation"/>
                    <div class="o_row mw-50" name="l10n_jo_transportation_allowance">
                        <field name="l10n_jo_transportation_allowance"/>
                        <span>/ month</span>
                    </div>
                    <label for="l10n_jo_other_allowances" string="Other"/>
                    <div class="o_row mw-50" name="l10n_jo_other_allowances">
                        <field name="l10n_jo_other_allowances"/>
                        <span>/ month</span>
                    </div>
                </group>
            </group>
        </field>
    </record>
</odoo>
