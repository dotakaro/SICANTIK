# SICANTIK Companion App Environment Variables

# Database Configuration
POSTGRES_DB=sicantik_companion
POSTGRES_USER=odoo
POSTGRES_PASSWORD=odoo_password_secure_123

# MinIO Configuration
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=minio_password_secure_123

# SICANTIK Database Connection (External)
SICANTIK_DB_HOST=localhost  # Update with actual SICANTIK server IP
SICANTIK_DB_PORT=3306
SICANTIK_DB_NAME=db_office  # Update with actual database name
SICANTIK_DB_USER=readonly_user  # Create read-only user
SICANTIK_DB_PASSWORD=readonly_password

# BSRE Integration
BSRE_API_URL=https://api.bsre.id/v1
BSRE_CLIENT_ID=your_bsre_client_id
BSRE_CLIENT_SECRET=your_bsre_client_secret
BSRE_ENVIRONMENT=sandbox  # sandbox or production

# File Paths
SICANTIK_PDF_PATH=/path/to/sicantik/uploads  # Update with actual path
BACKUP_PATH=/path/to/backups

# Security
JWT_SECRET=your_jwt_secret_key_here
API_RATE_LIMIT=100  # requests per minute

# Monitoring
LOG_LEVEL=INFO
ENABLE_METRICS=true

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
