# Development Environment Variables for SICANTIK + Companion

# === SICANTIK Configuration ===
SICANTIK_DB_HOST=sicantik_mysql
SICANTIK_DB_PORT=3306
SICANTIK_DB_NAME=db_office
SICANTIK_DB_USER=sicantik_user
SICANTIK_DB_PASSWORD=sicantik_password
SICANTIK_DB_ROOT_PASSWORD=root_password_123

# === Odoo Companion Configuration ===
ODOO_DB_HOST=postgres_companion
ODOO_DB_PORT=5432
ODOO_DB_NAME=sicantik_companion
ODOO_DB_USER=odoo
ODOO_DB_PASSWORD=odoo_password_secure

# === MinIO Configuration ===
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_BUCKET_NAME=sicantik-documents

# === BSRE Configuration ===
BSRE_API_URL=https://api.bsre.id/v1
BSRE_CLIENT_ID=your_bsre_client_id_here
BSRE_CLIENT_SECRET=your_bsre_client_secret_here
BSRE_ENVIRONMENT=sandbox

# === Redis Configuration ===
REDIS_HOST=redis_cache
REDIS_PORT=6379
REDIS_DB=0

# === Email Configuration (MailHog for development) ===
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_SSL=false

# === Security ===
JWT_SECRET=development_jwt_secret_key_change_in_production
API_RATE_LIMIT=1000

# === Logging ===
LOG_LEVEL=DEBUG
ENABLE_METRICS=true

# === File Paths ===
SICANTIK_UPLOAD_PATH=/var/www/html/uploads
BACKUP_PATH=/backups

# === Development Settings ===
DEBUG=true
DEVELOPMENT_MODE=true
AUTO_RELOAD=true

# === WhatsApp Configuration (for future implementation) ===
WHATSAPP_API_URL=https://api.whatsapp.com/v1
WHATSAPP_TOKEN=your_whatsapp_token_here
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here

# === Network Configuration ===
NETWORK_SUBNET=172.25.0.0/16
